@model Employee
@inject IEmployeeRepository _employeeRepository
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<form method="post">
    <p>
        <label asp-for="EmployeeId">Your EmployeeId:</label>
        @ViewBag.NextEmployeeId
    </p>
    <p>
        <label asp-for="FirstName">Your First Name:</label>
        <input asp-for="FirstName" />
    </p>
    <p>
        <label asp-for="LastName">Your Last Name:</label>
        <input asp-for="LastName" />
    </p>
    <p>
        <label asp-for="Designation">Your Designation:</label>
        <input asp-for="Designation" />
    </p>
    <p><button type="submit">Submit</button></p>
    <p>
        <h3>Total Employees Count: @_employeeRepository.GetAllEmployees().Count </h3>
    </p>
</form>